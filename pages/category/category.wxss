/* pages/category/category.wxss */
.container{
  background-color: #fff;
  padding: 0;
}
/* 搜索框 */
.search-container {
  width: 100%;
  /* height: 30px; */
  position: absolute;
  padding: 10px;
  background-color:#fff;
  box-sizing: border-box;
}

.search-container .searchBox{
  width: 100%;
  background:rgb(233,233,233);
}

.search-input {
  box-sizing: border-box;
  width:90%;
  height: 30px;
  line-height: 30px;
  min-height: 30px;
  border-radius: 5px;
  font-size: 14px;
  padding-left: 100rpx;
  border: none;
}

.search-container image {
  width: 50rpx;
  height: 25px;
  position: absolute;
  top: 13px;
  left: 50rpx;
  z-index: 99;
}

.search-container icon{
  position: absolute;
  height: 20px;
  top: 13px;
  right:30rpx;
  z-index: 99;
}

/*热门搜索  */
.search-history {
  width: 100%;
  margin-top: 50px;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.history-title view {
  display: inline-block;
}

.history-title{
  height:25px;
}

.history-title .title {
  font-size: 14px;
  color: #505050;
  float: left;
}

.history-title .clear {
  font-size: 14px;
  color: #f00;
  float: right;
}

.history-content{
  margin-top: 5px;
}

.history-content .conItem {
  display: inline-block;
  height: 30px;
  font-size: 12px;
  background-color: #fff;
  color: #808080;
  line-height: 30px;
  padding: 0 20rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
  border: 1px solid #e5e5e5;
  border-radius: 15px;
}

/* 热门分类 */
.search-category{
  width: 100%;
  margin-top: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.category-title{
  width: 100%;
  text-align: left;
  font-size: 20px;
  font-weight: 700;    
}

.category-image{
  width: 100%;
  margin-top: 10px;
  position: relative;
}

.category-image image{
  width: 100%;
  height: 100px;
  border-radius: 5px;
}
.category-image text{
  position: absolute;
  top: 50%;
  left: 50%;
  font-size: 20px;
  color: #fff;
  font-weight: 700;
  margin-left: -55px;
  margin-top: -13px;
}