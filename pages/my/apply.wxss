.container{
  height: 100vh;
  display: block;
  /* background-color: #fff; */
}

.top {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 10px;
  box-sizing: border-box;
  border-top: 10px solid #f5f5f5; 
  background-color: #fff;
}

.sendNum{
  font-size: 14px;
  color: #383838;
}

.detail{
  font-size: 12px;
  color: #808080;
  margin-bottom: 10px;
}

.goodsImg {
  width: 100%;
  height: 80px;
}

.goodsImg image {
  width: 80px;
  height: 80px;
  margin-right: 10px;
}

/*商品问题描述  */

.judge {
  width: 100%;
  border-top: 10px solid #f5f5f5; 
  border-bottom: 10px solid #f5f5f5; 
}

.judgeInfo {
  width: 100%;
  height: 150px;
  background-color: #fff;
}

.judgeInfo textarea {
  width: 100%;
  height: 100%;
  font-size: 14px;
  padding-left: 10rpx;
  padding-top: 5px;
}

.judgeImg {
  width: 100%;
  height: 100px;
  background-color: #fff;
  padding: 10px;
  box-sizing: border-box;
  display: flex;
  flex: row;
}

.addImg {
  width: 160rpx;
  height: 80px;
  background-color: #f1f1f1;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
  color: #5e5e5e;
}

.addImg text {
  height: 40px;
  width: 80rpx;
  font-size: 20px;
  text-align: center;
  line-height: 40px;
  border: 1px dashed #5e5e5e;
  margin-top: 10px;
  margin-bottom: 5px;
}

.imgBox {
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}

.imgBox image {
  width: 160rpx;
  height: 80px;
  margin-right: 20rpx;
}
/* 提交按钮 */
.confirm{
  margin-top: 10px;
  display: flex;
  flex-direction: column;
}

.confirm .tj{
  width: 40%;
  font-size: 14px;
  border-radius: 10px;
  border:1px solid #000;
  background-color: #fff;
}

.confirm text{
  font-size: 12px;
  color: #383838;
  margin-top: 10px;
  padding-left: 20px;
}