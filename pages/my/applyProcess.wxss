.top {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 10px;
  box-sizing: border-box;
  border-top: 10px solid #f5f5f5; 
  background-color: #fff;
}

.sendNum{
  font-size: 14px;
  color: #383838;
}

.detail{
  font-size: 12px;
  color: #808080;
  margin-bottom: 10px;
}

.goodsImg {
  width: 100%;
  height: 80px;
}

.goodsImg image {
  width: 80px;
  height: 80px;
  margin-right: 10px;
}

.basic {
  font-size: 14px;
  color: gray;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 20rpx;
}

.state {
  color: #d43030;
}

/*物流详情  */

.info {
  width: 100%;
  padding-left: 120rpx;
  padding-right: 20rpx;
  padding-top: 10px;
  box-sizing: border-box;
  background-color: #fff;
  color: #9e9e9e;
  border-top: 10px solid #f5f5f5; 
}

.address {
  font-size: 14px;
}

.logInfo {
  margin-top: 30px;
}

.logInfo>view {
  display: flex;
  flex-direction: row;

  /* border-left: 1px solid #9e9e9e;  */
}

.logInfo>view icon {
  margin-top: 5px;
  z-index: 5;
}

.logInfo>view view {
  font-size: 14px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
  margin-bottom: 10px;
}

.logInfo>view view text {
  padding-left: 40rpx;
}

.br {
  position: absolute;
  height: 45px;
  width: 2rpx;
  border-left: 1px solid #9e9e9e;
  top: 14px;
  left: -6px;
}
.container{
  height: 100vh;
  display: block;
  background-color: #fff;
}