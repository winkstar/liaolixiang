.addressBox {
  width: 100%;
  height: 120px;
  position: relative;
  margin-bottom: 10px;
}

.addressBox .userBg {
  width: 100%;
  height: 100%;
  padding: 10px;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #fff;
  border-radius: 10px;
}

.addressBox .userBg image {
  width: 100%;
  height: 100%;
}

.namePhone {
  position: absolute;
  top: 20px;
  left: 50rpx;
  font-size: 16px;
  color: #000;
  font-weight: 700;
}

.name {
  margin-right: 20rpx;
  font-weight: 700;
}

.address {
  position: absolute;
  top: 45px;
  left: 50rpx;
  font-size: 12px;
  color: #000;
  width: 90%;
  margin-top: 5px;
}

.address text {
  display: block;
  width: 90%;
}

.operate {
  position: absolute;
  width: 100%;
  top: 90px;
  left: 50rpx;
  font-size: 12px;
  color: #030303;
  display: flex;
  flex-direction: row;
  margin-top: 5px;
}

.default {
  margin-right: 45%;
  width: 90px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.default icon {
  margin-bottom: -2px;
  margin-right: 4rpx;
}

.addNew {
  position: fixed;
  bottom: 20px;
  left: 0;
  width: 100%;
  height: 32px;
  z-index: 5;
  padding: 0 10px;
  box-sizing: border-box;
}

.addNew button {
  width: 160px;
  height: 32px;
  font-size: 14px;
  line-height: 32px;
  border: 1px solid black;
  background-color: #fff;
}

.container {
  height: 100vh;
  padding: 10px;
  box-sizing: border-box;
  display: block;
}
