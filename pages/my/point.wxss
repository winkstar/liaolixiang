/* pages/my/point.wxss */
page{
  height: 100%;
  width: 100%;
}
.container{
  height: 100%;
  width: 100%;
}
.pointBox{
  width: 90%;
  margin: 10px auto;
  background: #fff;
  border-radius: 8px;
  padding: 10px 10px 5px;
  box-sizing: border-box;
}
.pointBox .pointTop{
  width: 100%;
  padding: 0 20px;
  box-sizing: border-box;
  display: flex;
}
.pointTop text{
  flex: 50%;
  line-height:50px; 
  border-bottom: 1px solid rgba(229, 229, 229, 1);
  font-size: 30px;
  font-weight: 700;
  color: rgba(80, 80, 80, 1);
}
.pointBox .point{
  text-align: right;
}
.pointBottom{
  width: 100%;
  position: relative;
  padding: 0 20px;
  box-sizing: border-box;
}
.pointBottom text{
  line-height: 35px;
  font-size: 14px;
  color: rgba(212, 48, 48, 1); 
}
.pointBottom view{
  position: absolute;
  top: 7px;
  right: 10px;
  width: 70px;
	height: 24px;
	color: rgba(0, 0, 0, 1);
	background-color: rgba(255, 255, 255, 1);
	box-shadow: rgba(0, 0, 0, 1) solid 1px;
	border-radius: 5px;
	font-size: 12px;
	line-height: 24px;
	text-align: center;
  border: 1px solid #ccc;
}
.usePoint{
  width: 100%;
  position: absolute;
  top: 150px;
}
.usePoint image{
  width: 100%;
}
.pointTips{
  position: fixed;
  background: #fff;
  width: 300px;
  height: 200px;
  box-shadow: 0 0 2px 2px #ccc;
  padding: 10px 20px 10px;
  box-sizing: border-box;
  border-radius: 5px;
  top: 171px;
  left: 50%;
  margin-left: -150px;
  z-index: 99;
}
.pointTips text{
  display: block;
}
.pointTips .textTitle{
  width: 100%;
  text-align: center;
  font-size: 14px;
  line-height: 50px;
}
.pointTips .tips{
  width: 100%;
  font-size: 12px;
  line-height: 30px;
}