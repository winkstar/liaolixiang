@import 'stylesheet.wxss';

.myBox{
  width: 300px;
  height: 80%;
  background-color: #fff;
  margin-top:20%;
  position: relative;
  border-radius: 10px;
}

.myBox >image{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -50px;
  margin-top: -50px;
  border: 2px solid #383838;
}

.name{
  position: absolute;
  font-size: 16px;
  font-weight: 700;
  width: 100%;
  text-align: center;
  top: 60px;
}

.item{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: absolute;
  top: 120px;
  padding: 0 20px;
  box-sizing: border-box;
  justify-content:space-between;
}

.item>view {
  width: 30%;
  height: 60px;
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 30px;
  margin-bottom: 20px;
}

.item>view>view {
  font-size: 35px;
  height: 40px;
  position: relative;
  color: #000;
}
.item>view .icon {
  width: 40px;
  height: 40px;
  position: relative;
}
.item>view>text{
  font-size: 14px;
}

