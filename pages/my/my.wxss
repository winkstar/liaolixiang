/* 弹框 */
.shareBox{
  width: 100%;
  height: 40%;
  position: fixed;
  bottom: -40%;
  left: 0;
  background: #fff;
  padding: 20px;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
  transition: all 0.5s;
}
.shareBox .colseWindow{
  position: absolute;
  top: 5px;
  right: 10px;
  font-size: 14px;
  line-height: 30px;
  color: #333;
}
.shareBox .shareText{
  margin-top: 20px;
  font-size: 14px;
  line-height: 30px;
}
.shareBox button{
  margin-top: 30px;
}