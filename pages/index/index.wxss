}
.stepBox .step2{
  bottom: 117rpx;
  right: 130rpx;
  width: 600rpx;
  height: 280rpx;
}
.stepBox .step3{
  bottom: 0rpx;
  right: 110rpx;
  width: 434rpx;
  height: 335rpx;
}
