/**index.wxss**/
@import 'stylesheet.wxss';

.icon-1::after {
  font-family: 'iconfont';
  font-weight: 500;
  font-style: normal;
  content: '\e614';
}

page {
  height: 100%;
}

.container {
  padding: 0;
  position: relative;
}
#videoCont{
  width: 100%;
  height: 100%;
}
.scan {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
}

.scan .icon-1 {
  font-size: 60rpx;
}

.bg {
  height: 100%;
  width: 100%;
}

.bg image {
  display: block;
  border: 0;
  height: 100%;
  width: 100%;
}

.icon-2::after {
  font-family: 'iconfont';
  font-weight: 500;
  font-style: normal;
  content: '\e613';
}

.play {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  top: 40%;
  left: 50%;
  margin-top: -100rpx;
  margin-left: -100rpx;
  text-align: center;
}

.play text {
  font-size: 80px;
  opacity: 0.5;
}

.icon-3::after {
  font-family: 'iconfont';
  font-weight: 500;
  font-style: normal;
  content: '\e641';
}

.collect {
  position: absolute;
  width: 80rpx;
  right: 30rpx;
  top: 40%;
  margin-top: 20rpx;
  text-align: center;
  font-size: 14px;
  color: #fff;
  display: flex;
  flex-direction: column;
  z-index: 9;
}

.collect .icon {
  width: 40px;
  height: 40px;
}

.icon-4::after {
  font-family: 'iconfont';
  font-weight: 500;
  font-style: normal;
  content: '\e605';
}

.comment {
  position: absolute;
  width: 80rpx;
  right: 30rpx;
  top: 40%;
  margin-top: 180rpx;
  text-align: center;
  font-size: 14px;
  color: #fff;
  display: flex;
  flex-direction: column;
  z-index: 9;
}

.comment .icon-4 {
  font-size: 80rpx;
  color: #fff;
  opacity: 0.7;
}

.icon-5::after {
  font-family: 'iconfont';
  font-weight: 500;
  font-style: normal;
  content: '\e627';
}

.transmit {
  position: absolute;
  width: 80rpx;
  right: 30rpx;
  top: 40%;
  margin-top: 340rpx;
  text-align: center;
  font-size: 14px;
  color: #fff;
  display: flex;
  flex-direction: column;
  z-index: 9;
}
.change{
  position: absolute;
  width: 140rpx;
  height: 30px;
  right: 50%;
  top: 80%;
  margin-right: -70rpx;
  margin-top: 40rpx;
  border: 1px solid #fff;
  border-radius: 5px;
  color: #fff;
  display: flex;
  flex-direction: column;
  z-index: 9;
}
.change .text{
  text-align: center;
  font-size: 16px;
  line-height: 30px;
}
.transmit .icon-5 {
  font-size: 80rpx;
  color: #fff;
  opacity: 0.7;
}

.transmit button {
  padding: 0;
  border: none;
  font-size: 24px;
}

.transmit button image {
  width: 80rpx;
  height: 120rpx;
}

.num {
  z-index: 9;
}

.name {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  margin-left: 20rpx;
  color: #fff;
  font-size: 14px;
  z-index: 9;
}


.cart {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  right: 160rpx;
  bottom: 100rpx;
  text-align: center;
  font-size: 14px;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 50%;
  line-height: 80rpx;
  z-index: 9;
}

.cart .bage{
  height: 18px;
  width: 18px;
  border-radius: 50%;
  background: red;
  color: #fff;
  line-height: 18px;
  font-size: 12px;
  text-align: center;
  position: absolute;
  right: 3px;
  top: 3px;
  z-index: 19;
}

.cart .icon{
  width: 30px;
  height: 30px;
  margin-top: 8px;
  margin-left: 3px;
  position: relative;
}

.cookBook {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  right: 40rpx;
  bottom: 100rpx;
  text-align: center;
  font-size: 14px;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 50%;
  line-height: 80rpx;
  z-index: 9;
}

.cookBook .icon {
  width: 30px;
  height: 30px;
  margin-top: 5px;
  margin-left: 5px;
}

/* 评论框 */

.commentBox {
  width: 100%;
  height: 350px;
  position: absolute;
  bottom: 8px;
  background-color: #000;
  /* z-index: 9; */
}

.commentBox .clear {
  color: #666;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px;
  font-size: 14px;
}

.commentCon{
  height: 250px;
}

.singleCon {
  display: flex;
  flex-direction: row;
  padding: 10px;
  box-sizing: border-box;
}

.imgBox {
  width: 50px;
  height: 50px;
}

.imgBox image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.conBox {
  display: flex;
  flex-direction: column;
  color: #666;
  margin-left: 10px;
}

.userName {
  font-size: 14px;
  margin-bottom: 5px;
}

.time {
  font-size: 12px;
  margin-bottom: 5px;
}

.con {
  color: #fff;
  font-size: 16px;
}

.commentIn {
  position: absolute;
  width: 100%;
  bottom: 0;
  height: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  /* padding: 0 10px 0 0; */
}

.commentIn textarea {
  width: 90%;
  height: 40px;
  box-sizing: border-box;
  border: 1px solid #666;
  font-size: 16px;
  line-height: 38px;
  padding-left: 6rpx;
  color: #f6f6f6;
}

.commentIn text{
  margin-left: 1%;
  color: #666;
  font-size: 40px;
  line-height: 40px;
}

.show{
  display: block;
}

.hide{
  display: none;
}

/* 新手引导 */
