/* pages/share/share.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
  height: 100%;
  width: 100%;
  background: #fff;
  position: relative;
}
.wechatimg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}
.sharepic{
  position: absolute;
  left: 50%;
  margin-left: -75px;
  top: 250px;
  width: 150px;
  height: 32px;
  padding: 0;
  color: #fff;
  font-size: 14px;
  text-align: center;
  border-radius: 20px;
  border: 1px solid #ccc;
  z-index: 3;
  background: transparent;
}
.sharebtn{
  position: absolute;
  left: 50%;
  margin-left: -75px;
  top: 250px;
  width: 150px;
  height: 32px;
  padding: 0;
  font-size: 14px;
  text-align: center;
  border-radius: 20px;
  z-index: 3;
  background: transparent;
}
.back{
  position: absolute;
  color: #fff;
  left: 50%;
  margin-left: -75px;
  top: 350px;
  width: 150px;
  height: 32px;
  font-size: 14px;
  line-height: 30px;
  border: 1px solid #ccc;
  text-align: center;
  border-radius: 20px;
  z-index: 3;
}
.toPengyouquan{
  position: absolute;
  color: #fff;
  left: 50%;
  margin-left: -75px;
  top: 300px;
  width: 150px;
  height: 32px;
  font-size: 14px;
  line-height: 30px;
  border: 1px solid #ccc;
  text-align: center;
  border-radius: 20px;
  z-index: 3;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index:9;
  background: rgba(0,0,0,1);
}
.mask .shareBigPic{
  width: 80%;
  margin: 100px 10% 50px;
}
.mask .shareText{
  width: 100%;
  font-size: 16px;
  line-height: 30px;
  color: #fff;
  text-align: center;
}