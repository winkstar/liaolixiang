/* pages/cart/cart.wxss */
page{
  height: 100%;
  width: 100%;
}
.container{
  background-color: #eee;
  height: 100%;
  width: 100%;
}
.tips{
  width: 90%;
  margin: 0 auto;
  box-sizing: border-box;
  line-height: 40px;
  font-size: 14px;
  font-weight: 700;
}

.porduct-list {
  display: flex;
  flex-direction: column;
  width: 90%;
  background: #fff;
  border-radius: 5px;
}

.porduct-item {
  display: flex;
  width: 100%;
  background: #fff;
  height: 100px;
  margin: 10px auto;
  border-radius: 10px;
  align-items: center;
  position: relative;
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  text-overflow: ellipsis;
  border-bottom: 1px solid #e5e5e5;
}

.del {
  position: absolute;
  background-color: #383838;
  width: 140rpx;
  height: 100px;
  text-align: center;
  line-height: 100px;
  z-index: 4;
  top: 0;
  right: 0;
  color: #fff;
}

.select {
  margin-left: 10rpx;
}

.porduct-image image {
  height: 160rpx;
  width: 160rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.description {
  font-size: 14px;
  width: 95%;
  position: relative;
}
.description >text{
  color: #505050;
  display: block;
}
.description picker{
  position: absolute;
  height: 30px;
  top: 0;
  right: 5px;
  font-size: 14px;
}
.description .dishInner{  
  margin-top: 10px;
  font-size: 14px;
}
.price-count {
  display: flex;
  align-items: center;
  padding: 0 5px;
  box-sizing: border-box;
  justify-content: space-between;
}

.count {
  display: flex;
  flex-direction: row;
  font-size: 14px;
  align-items: center;
  margin-top: 5px;
}

.stepper {
  display: flex;
  width: 90px;
  /*给主容器设一个边框*/
  border: 1px solid #ccc;
  border-radius: 3px;
}

/*加号和减号*/

.stepper text {
  width: 30px;
  line-height: 20px;
  text-align: center;
  float: left;
}

/*数值*/

.stepper input {
  width: 30px;
  height: 20px;
  float: left;
  text-align: center;
  font-size: 14px;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}

.color-red {
  color: black;
  font-size: 16px;
}

.operator {
  z-index: 99;
  display: flex;
  position: fixed;
  height: 45px;
  line-height: 45px;
  background: #fff;
  width: 100%;
  bottom: 0px;
  border: 1px solid #eee;
  justify-content: space-between;
  align-items: center;
}

.opr-btn button {
  height: 46px;
  line-height: 45px;
  background: #383838;
  width: 100px;
  font-size: 14px;
  color: #fff;
  border-radius: 0;
}

.check-all {
  width: 80rpx;
  font-size: 14px;
  margin-left: 60rpx;
  position: relative;
  text-align: right;
}

.check-all icon {
  position: absolute;
  top: 10px;
  left: -20px;
}

.total {
  display: flex;
  line-height: 45px;
  align-items: center;
}
